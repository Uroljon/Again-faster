  "name": "Cart settings",
  "settings": [
    {
      "type": "text",
      "id": "hero__title",
      "label": "Hero title change",
      "default": "Team barbell"
    },
    {
      "type": "text",
      "id": "hero__btn",
      "label": "Hero button text change",
      "default": "Explore"
    },
    {
      "type": "url",
      "id": "hero__btn__url",
      "label": "Hero button url change"
    },
    {
      "type": "image_picker",
      "id": "hero__bg",
      "label": "Hero img change"
    }
  ]

}
