          "id": "link2_src",
          "label": "Link 2 icon" 
        },
        {
          "type": "url",
          "id": "link2",
          "label": "Link 2" 
        },
        {
          "type": "image_picker",
          "id": "link3_src",
          "label": "Link 3 icon"
        },
        {
          "type": "url",
          "id": "link3",
          "label": "Link 3"
        }
      ]
    },
    {
